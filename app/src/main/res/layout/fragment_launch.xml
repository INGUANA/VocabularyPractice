<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivSplashScreenBackgroundMmf"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/starting_screen_splash_optimized"/>

    <VideoView
        android:id="@+id/vvSplashScreenMmf"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/ivSplashScreenImageMmf"
        app:layout_constraintBottom_toBottomOf="@id/ivSplashScreenImageMmf"
        app:layout_constraintEnd_toEndOf="@id/ivSplashScreenImageMmf"
        app:layout_constraintStart_toStartOf="@id/ivSplashScreenImageMmf"/>

    <!--<ImageView
        android:id="@+id/ivExtraImageCoverMmf"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/starting_screen_splash_optimized"/>-->

    <ImageView
        android:id="@+id/ivSplashScreenImageMmf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_marginTop="@dimen/margin_top_image_large"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@mipmap/app_launch_splash_icon_transparent"/>

